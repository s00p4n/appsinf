<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Page principale </title>
    <link rel="stylesheet" href="css/styleprinc.css">
    <!--normalization helps to make the content standard for all servers-->
    <link rel="stylesheet" href="./css/normalize.css">
    <!--link to google fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <!--link to font google-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <!--link to fontawesome-->
    <link rel="stylesheet" href="css/all.min.css">
</head>
<body>
  <header>
    <div class="container">
            <nav>
                <a href="/">
                <div class="logo"><i class="fa-solid fa-car-rear"></i><span>My LLN</span></div>
                </a>
                <form action="/search"></form>
                <div class="search">
                    <span class="search-icon material-symbols-outlined">search</span>
                    <input class= "search-input" type="search" name="query" placeholder="Search">
                </div>

                </form>
            </nav>

    </div>
  </header>

<div class="center">
  <div class="containersec">
<a  class="btn" href="/principale/login/">se connecter</a>

<a class="btn" href="/principale/signaler/">signaler</a>
</div>
</div>

<div class="bottom">
<p id="date"></p>
    <script>
      <!-- réalisé par l'intelligence artificielle -->
        let currentDate = new Date();
        let day = currentDate.getDate();
        let month = currentDate.getMonth() + 1;
        let year = currentDate.getFullYear();
        let formattedDate = day + "/" + month + "/" + year;
        document.getElementById("date").innerText = formattedDate;
    </script>
    <table>
        <thead>
        <tr>
            <th>Adresse</th>
            <th>Description</th>
            <th>Date</th>
        </tr>
        </thead>
        <tbody>
        <% if (Array.isArray(item) && item.length > 0) { %>
            <% item.forEach(item => { %>
                <tr>
                    <td><%= item.Adresse %></td>
                    <td><%= item.Description %></td>
                    <td><%= item.Date %></td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="3">No records found.</td>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>
</html>

</body>
</html>